<h1>Search Results</h1>
<ul>
  {{#each books}}
  <li>
    <h3>{{this.volumeInfo.title}}</h3>
    <p>{{this.volumeInfo.description}}</p>
    <form action="/reviews" method="POST">
      <input type="hidden" name="bookId" value="{{this.id}}">
      <textarea name="reviewText" placeholder="Write a review"></textarea>
      <input type="number" name="rating" min="1" max="5" placeholder="Rating (1-5)">
      <button type="submit">Submit Review</button>
    </form>
  </li>
  {{/each}}
</ul>
